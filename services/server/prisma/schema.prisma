generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(uuid())
    email      String   @unique
    first_name String
    last_name  String
    image_url  String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    events        Event[]
    event_ratings EventRating[]
    user_source   UserFriends   @relation("User_friends_source", fields: [userFriendsId], references: [id])
    user_target   UserFriends   @relation("User_friends_target", fields: [userFriendsId], references: [id])
    userFriendsId String
    userFriendsId String
}

model Event {
    id          String        @id @default(uuid())
    title       String
    description String
    datetimes   DateTime[]
    user        User          @relation(fields: [user_id], references: [id])
    user_id     String
    EventRating EventRating[]
}

model EventRating {
    id       String @id @default(uuid())
    event    Event  @relation(fields: [event_id], references: [id])
    event_id String @unique
    user     User   @relation(fields: [user_id], references: [id])
    user_id  String @unique
    ratings  Json[]
}

model UserFriends {
    id          String @id @default(uuid())
    UserSource  User   @relation("User_friends_source", fields: [user_source], references: [id])
    user_source String @unique
    UserTarget  User   @relation("User_friends_target", fields: [user_target], references: [id])
    user_target String @unique
}
