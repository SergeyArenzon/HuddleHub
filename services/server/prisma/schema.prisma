generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String          @id @default(uuid())
    email         String          @unique
    first_name    String
    last_name     String
    image_url     String
    created_at    DateTime        @default(now())
    updated_at    DateTime        @updatedAt
    events        Event[]
    event_ratings EventRating[]
    friends       UserFavorites[] @relation("UserFavoritesUser")
    friendOf      UserFavorites[] @relation("UserFavoritesFriend")
}

model Event {
    id          String        @id @default(uuid())
    title       String
    description String
    datetimes   DateTime[]
    user        User          @relation(fields: [user_id], references: [id])
    user_id     String
    EventRating EventRating[]
}

model EventRating {
    id       String @id @default(uuid())
    event    Event  @relation(fields: [event_id], references: [id])
    event_id String @unique
    user     User   @relation(fields: [user_id], references: [id])
    user_id  String @unique
    ratings  Json[]
}

model UserFavorites {
    user_id     String
    favorite_id String
    user        User   @relation("UserFavoritesUser", fields: [user_id], references: [id])
    friend      User   @relation("UserFavoritesFriend", fields: [favorite_id], references: [id])

    @@id([user_id, favorite_id])
}
